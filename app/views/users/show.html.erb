<%= render partial: "user", locals: { user: @user } %>
<div class="box">
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
</div>
<section>
    <% @user.most_recent_posts.each do |post| %>
        <%= render partial: "post", locals: { post: post } %>
    <% end %>
</section>

<%= link_to "See all posts", posts_path(@user) %>