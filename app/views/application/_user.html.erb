<a href="<%= show_user_path(user) %>">
    <article class="user-card">
        <%= image_tag(user.photo, class: "user_image") %>
        <div>
            <h1>
                <%= user.name %>
            </h1>
            <span>
                Number of posts: <%= user.posts_counter %>
            </span>
        </div>
    </article>
</a>
